<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_hoten"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên sinh viên"
        android:textSize="24sp"
        android:textColor="#002AFF"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_namsinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Năm sinh: 1999"
        android:textSize="20sp"
        android:layout_below="@id/tv_hoten"
        android:layout_marginTop="10dp"
        android:textColor="#33FD06"/>
    <TextView
        android:id="@+id/tv_diachi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cà Mau"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_hoten"
        android:layout_marginTop="10dp"
        android:textColor="#292924"/>
    <ImageButton
        android:id="@+id/ibrn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@null"/>
    <ImageButton
        android:id="@+id/ibtn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@null"
        android:layout_toLeftOf="@id/ibrn_edit"
        android:layout_marginTop="10dp"/>

</RelativeLayout>